<h2 id="msg"></h2>

<script>
let clicks = 0;

function shakeNo(){
  const btn=document.getElementById("no");
  const msg=document.getElementById("msg");

  clicks++;

  btn.classList.remove("shake");
  void btn.offsetWidth;
  btn.classList.add("shake");

  if(clicks<2){
    msg.innerText="Are you sure? ü•∫";
  } else {
    window.location.href='https://docs.google.com/forms/d/e/1FAIpQLSeGmidNke4RfRLoTKRb8h_44c9sMVsYSWe5j4Zco00duw2Vcw/viewform?usp=header';
  }
}
</script>

